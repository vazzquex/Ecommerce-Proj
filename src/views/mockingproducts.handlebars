<section id="products" class="container">
    <h1 class="mt-3" id="title">Productos</h1>


    <haeder>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css" rel="stylesheet">


        <div class="container my-4">

            <button class="btn btn-outline-primary mb-3" type="button" data-toggle="collapse" data-target="#filters"
                aria-expanded="false" aria-controls="filters">
                <i class="bi bi-filter-right"></i>
                <i class="fa fa-chevron-down"></i> Filtros
            </button>

            <div class="collapse" id="filters">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-3">Ordenar por:</h4>
                        <div class="list-group">
                            <a href="#" id="linkDesc" class="list-group-item list-group-item-action custom-border">Mayor
                                precio</a>
                            <a href="#" id="linkAsc" class="list-group-item list-group-item-action custom-border">Menor
                                precio</a>
                            <a href="#" id="relevant" class="list-group-item list-group-item-action custom-border">
                                Relevante</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </haeder>


    <div id="products-container">
        <div class="row flex-row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card mb-3" id="product-{{id}}">
                    <div class="row g-0">

                        <div>
                            <div class="image-container">

                                {{#if thumbnail}}
                                <div class="image-product img-fluid img" style="background-image: url({{thumbnail}})">
                                </div>
                                {{else}}
                                <div class="image-product img-fluid img"
                                    style="background-image: url('https://camarasal.com/wp-content/uploads/2020/08/default-image-5-1.jpg')">
                                </div>
                                {{/if}}

                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="card-body">

                                <h2 class="card-text">${{price}}</h2>

                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{description}}</p>
                                <p class="card-text pid" data-pid="{{id}}">ID: {{id}}</p>
                                <p class="card-text">Categoria: {{category}}</p>

                                {{#if stock}}
                                <p class="card-text stock" data-stock="{{stock}}">Stock: {{stock}}</p>
                                {{else}}
                                <p class="card-text stock" data-stock="{{stock}}">Stock: {{stock}}</p>
                                <p style="color: red;"> No hay Stock</p>
                                {{/if}}

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>

        <ul class="pagination">
            <li class="page-item">
                {{#if products.hasPrevPage}}
                <a class="page-link" href={{products.prevLink}} aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
                {{else}}
                <a class="page-link disabled" href="" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
                {{/if}}
            </li>
            {{#each products.totalPagesArray}}
            <li class="page-item"><a class="page-link" href="/mockingproducts?page={{this}}">{{this}}</a></li>
            {{/each}}
            <li class="page-item">
                {{#if products.hasNextPage}}
                <a class="page-link" href={{products.nextLink}} aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
                {{else}}
                <a class="page-link disabled" href="" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
                {{/if}}
            </li>
        </ul>



    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>