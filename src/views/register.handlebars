<section class='container my-5'>
	<div class='row bg-light shadow login-section rounded'>
		<div class='col-lg-2 d-none d-lg-block'></div>
		<div class='col-lg-8 p-5'>
			<h1 class='mb-4'>Registrar Nuevo Usuario</h1>
			<form action='/api/users/' method='post'>
				<div class='row g-3'>
					<div class='col-md-6'>
						<input type='text' class='form-control form-control-lg' placeholder='Nombre' aria-label='Nombre'
							name='first_name' />
					</div>
					<div class='col-md-6'>
						<input type='text' class='form-control form-control-lg' placeholder='Apellido'
							aria-label='Apellido' name='last_name' />
					</div>
					<div class='col-12'>
						<input type='email' class='form-control form-control-lg' placeholder='Correo Electronico'
							aria-label='Correo' name='email' />
					</div>
					<div class='col-md-6'>
						<input type='password' class='form-control form-control-lg' placeholder='Contraseña'
							aria-label='Contraseña' name='password' />
					</div>
					<div class='col-md-6'>
						<input type='age' class='form-control form-control-lg' placeholder='Age' aria-label='Age'
							name='age' />
					</div>

					{{!-- <div class='col-md-12'>
						<input type='text' class='form-control form-control-lg' placeholder='Imagen' aria-label='Imagen'
							name='img' />
					</div> --}}

					<button type='submit' class='btn btn-primary btn-lg btn-block mt-3'>Registrar</button>
				</div>
			</form>
		</div>
		<div class='col-lg-2 d-none d-lg-block'></div>

	</div>
</section>